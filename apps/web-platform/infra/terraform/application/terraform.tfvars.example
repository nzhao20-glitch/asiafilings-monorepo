# AsiaFilings Application Layer - Example Variables
# Copy this to terraform.tfvars and customize

# General Configuration
project_name = "asiafilings"
environment  = "prod"
aws_region   = "ap-east-1"

# Networking
use_default_vpc = false
# acm_certificate_arn = "arn:aws:acm:ap-east-1:128638789653:certificate/xxx"

# ECS Configuration (Cost-Optimized)
container_port     = 3001
ecs_task_cpu       = 256  # 0.25 vCPU
ecs_task_memory    = 512  # 512MB
ecs_desired_count  = 1
ecs_min_count      = 1
ecs_max_count      = 3

# Application
frontend_url   = "http://18.167.27.8"
s3_bucket_name = "pdfs-128638789653"

