# .env.production.defaults
# Non-secret configuration for production — safe to commit.
# Secrets (DATABASE_URL, JWT_SECRET, COOKIE_SECRET) are in AWS SSM.
# Run: ./tools/scripts/pull-secrets.sh --app web --env prod

# Server (NODE_ENV, PORT, HOST, REDIS_* are hardcoded in docker-compose.prod.yml)
API_PREFIX=/api
API_VERSION=v1

# Authentication — secrets fetched from SSM
# DATABASE_URL=<from SSM>
# JWT_SECRET=<from SSM>
# COOKIE_SECRET=<from SSM>
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# DART API
DART_API_BASE_URL=https://opendart.fss.or.kr/api
DART_API_RATE_LIMIT=1000

# AWS / S3
AWS_REGION=ap-east-1
S3_REGION=ap-east-1
S3_BUCKET_NAME=pdfs-128638789653

# URLs
FRONTEND_URL=http://18.167.27.8
CORS_ORIGIN=http://18.167.27.8

# Logging
LOG_LEVEL=error

# Queue / Worker Configuration
BULL_DEFAULT_REMOVE_ON_COMPLETE=100
BULL_DEFAULT_REMOVE_ON_FAIL=50
PDF_PROCESSING_CONCURRENCY=3
TABLE_EXTRACTION_CONCURRENCY=3
