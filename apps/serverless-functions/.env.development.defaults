# .env.development.defaults
# Non-secret configuration for local development — safe to commit.
# Secrets (DATABASE_URL) are in AWS SSM at /platform/lambda/dev/
# Run: ./tools/scripts/pull-secrets.sh --app lambda --env dev

# HKEX Scraper
HKEX_BASE_URL=https://www1.hkexnews.hk
HKEX_MAX_PAGES=10
HKEX_RATE_LIMIT=2

# Storage (local dev uses filesystem; set S3_BUCKET to upload to S3)
S3_BUCKET=
AWS_REGION=ap-east-1
LOCAL_STORAGE_PATH=./downloads

# Database — for local dev, uses SQLite; for RDS, fetch from SSM
# DATABASE_URL=<from SSM>
DATABASE_URL=./hkex.db
ENABLE_DB=true

# PDF Processing
DOWNLOAD_PDFS=true
EXTRACT_TABLES=false
TABLE_SERVICE_URL=http://localhost:8001

# Downloader Lambda config (local testing)
CONCURRENCY=5
PROXY_BASE_URL=
